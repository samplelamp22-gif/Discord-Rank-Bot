# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here

# Database Configuration
# Option 1: Full DATABASE_URL (recommended)
DATABASE_URL=postgresql://username:password@host:port/database

# Option 2: Individual PostgreSQL components (alternative)
# PGHOST=localhost
# PGPORT=5432
# PGDATABASE=discord_bot
# PGUSER=your_username
# PGPASSWORD=your_password

# Role Configuration
# The Discord role ID that users need to use the bot commands
REQUIRED_ROLE_ID=123456789012345678

# The temporary role that gets assigned along with the other roles
TEMPORARY_ROLE_ID=123456789012345678

# Role 1 Options (Stage) - Names and their corresponding Discord role IDs
ROLE1_OPTION1=Stage 2
ROLE1_OPTION2=Stage 3
ROLE1_OPTION1_ID=123456789012345678
ROLE1_OPTION2_ID=123456789012345678

# Role 2 Options (Priority) - Names and their corresponding Discord role IDs
ROLE2_OPTION1=High
ROLE2_OPTION2=Mid
ROLE2_OPTION3=Low
ROLE2_OPTION1_ID=123456789012345678
ROLE2_OPTION2_ID=123456789012345678
ROLE2_OPTION3_ID=123456789012345678

# Role 3 Options (Strength) - Names and their corresponding Discord role IDs
ROLE3_OPTION1=Strong
ROLE3_OPTION2=Stable
ROLE3_OPTION3=Weak
ROLE3_OPTION1_ID=123456789012345678
ROLE3_OPTION2_ID=123456789012345678
ROLE3_OPTION3_ID=123456789012345678
